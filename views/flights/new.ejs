<%- include('../partials/header') %>
<div class="form">
    <h2 class="heading">Book New Flight</h2>
    <form action="/flights" method="POST">
        <label class="label">Airline:
            <select id="airline" name="airline" required>
                <option value="Delta">Delta</option>
                <option value="Southwest">Southwest</option>
                <option value="Jetblue">Jetblue</option>
            </select>
        </label><br>
        <label class="label">Airport:
            <select id="airport" name="airport" required>
                <option value="SFO">SFO</option>
                <option value="LAX">LAX</option>
                <option value="JFK">JFK</option>
                <option value="MIA">MIA</option>
                <option value="SJC">SJC</option>
            </select>
        </label><br>
        <label class="label">Flight Number:
            <input type="number" id="flightNo" name="flightNo" min="10" max="9999" required>
        </label><br>
        <label class="label">Departure Date and Time:
            <!-- converts to ISO 8601 format and sets the parameters -->
            <input type="datetime-local" id="departs" name="departs" required
                value="<%= newFlight.departs.toISOString().slice(0, 16) %>">
        </label><br>
        <button type="submit" class="submit">Submit</button>
    </form>
    <p class="error">
        <%= errorMsg %>
    </p>
    </div>
    <%- include('../partials/footer') %>