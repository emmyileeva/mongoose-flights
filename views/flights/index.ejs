<%- include('../partials/header') %>
    <h2 class="heading">Flight List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departure Date/Time</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(f => { %>
                <tr>
                    <td>
                        <%= f.airline %>
                    </td>
                    <td>
                        <%= f.airport %>
                    </td>
                    <td>
                        <%= f.flightNo %>
                    </td>
                    <td>
                        <%= f.departs.toLocaleString() %>
                    </td>
                    <td>
                        <a href="/flights/<%= f._id %>">Details</a>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <%- include('../partials/footer') %>